<section class="mt-12 py-12 bg-red-200 lg:flex justify-between items-start max-w-screen-xl mx-auto px-8">
  {% for feature in features %}
  <div class="flex flex-col md:flex-row lg:flex-col justify-between lg:w-1/3 text-center px-8">
    <img src="{{ feature.icon }}" class="block w-40 mx-auto" />
    <div class="ml-0 md:ml-8 lg:ml-0 text-center md:text-left lg:text-center w-full">
      {% if loop.first %}
      <h2 class="text-2xl font-bold mt-2 py-2 bg-red-800 text-red-200 tracking-tight rounded">
      {% else %}
      <h2 class="text-2xl font-bold mt-2 py-2 bg-red-700 text-red-200 tracking-tight rounded">
      {% endif %}
        {{ feature.title }}
      </h2>
      <p class="lg:mt-4 px-2 text-red-800">
        {{ feature.description }}
      </p>
      <p></p>
    </div>
  </div>
  {% endfor %}
</section>